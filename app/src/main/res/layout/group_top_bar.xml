<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<import type="android.arch.lifecycle.LifecycleOwner"/>
		<variable
			name="viewModel"
			type="pozzo.apps.travelweather.map.viewmodel.MapViewModel"/>
	</data>

	<!--todo I really need to improve this top bar design-->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimary">

		<FrameLayout
			android:id="@+id/vgTopBar"
			android:layout_width="0dp"
			android:layout_height="@dimen/button_size"
			android:paddingEnd="@dimen/margin_bigger"
			android:paddingStart="@dimen/margin_bigger"
			android:layout_weight="1">

			<EditText
				android:id="@+id/eSearch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_big"
				android:hint="@string/search"
				android:imeOptions="actionGo"
				android:inputType="text"
				android:visibility="invisible"
				tools:visibility="visible"/>

			<LinearLayout
				android:id="@+id/weatherSelection"
				android:layout_width="match_parent"
				android:layout_height="@dimen/button_size"
				android:orientation="vertical"
				android:gravity="center_vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12sp"
					android:text="@string/title_forecastDate"/>

				<Spinner
					android:id="@+id/spinnerDaySelection"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:entries="@array/forecastDays"/>
			</LinearLayout>
		</FrameLayout>

		<ImageButton
			android:id="@+id/bSearch"
			android:layout_width="@dimen/button_size"
			android:layout_height="@dimen/button_size"
			android:background="@null"
			android:contentDescription="@android:string/search_go"
			android:elevation="@dimen/elevation_floatingButton"
			android:onClick="@{() -> viewModel.toggleTopBar(eSearch.getText().toString())}"
			android:src="@android:drawable/ic_menu_search"/>
	</LinearLayout>
</layout>
