<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<import type="android.arch.lifecycle.LifecycleOwner"/>
		<variable
			name="viewModel"
			type="pozzo.apps.travelweather.map.viewmodel.MapViewModel"/>
	</data>

	<android.support.v4.widget.DrawerLayout
		android:id="@+id/drawerLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<!--todo Need to re organize this layout-->

		<RelativeLayout
			android:id="@+id/vgMain"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clipToPadding="false">

			<fragment
				android:id="@+id/map"
				android:name="pozzo.apps.travelweather.map.ui.MapFragment"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context=".MapsActivity"/>

			<FrameLayout
				android:id="@+id/vgTopBar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:alpha="0"
				android:background="@drawable/screen_gradient"
				android:paddingBottom="@dimen/margin_bigger"
				tools:alpha="0">

				<EditText
					android:id="@+id/eSearch"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginEnd="70dp"
					android:layout_marginStart="70dp"
					android:layout_marginTop="@dimen/margin_bigger"
					android:hint="@string/search"
					android:imeOptions="actionGo"
					android:inputType="text"
					android:visibility="invisible"
					tools:visibility="visible"/>
			</FrameLayout>

			<ImageButton
				android:id="@+id/bMenu"
				android:layout_width="@dimen/button_size"
				android:layout_height="@dimen/button_size"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:background="@color/colorPrimary"
				android:onClick="onMenu"
				android:paddingBottom="@dimen/margin_bigger"
				android:paddingEnd="@dimen/margin_bigger"
				android:paddingStart="@dimen/margin_bigger"
				android:paddingTop="@dimen/margin_bigger"
				android:contentDescription="@string/menu"
				android:elevation="@dimen/elevation_floatingButton"
				android:src="@drawable/ic_drawer"/>

			<ImageButton
				android:id="@+id/bSearch"
				android:layout_width="@dimen/button_size"
				android:layout_height="@dimen/button_size"
				android:layout_alignParentEnd="true"
				android:layout_alignParentTop="true"
				android:background="@color/colorPrimary"
				android:contentDescription="@android:string/search_go"
				android:elevation="@dimen/elevation_floatingButton"
				android:onClick="@{() -> viewModel.toggleTopBar(eSearch.getText().toString())}"
				android:src="@android:drawable/ic_menu_search"/>

			<LinearLayout
				android:id="@+id/menuEnd"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:gravity="center_vertical"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/startFlag"
					style="@style/buttonsOnButtonBar"
					android:src="@drawable/start_flag"
					android:contentDescription="@string/startPosition"/>

				<ImageView
					android:id="@+id/finishFlag"
					style="@style/buttonsOnButtonBar"
					android:src="@drawable/finish_flag"
					android:contentDescription="@string/finishPosition"
					android:alpha=".4"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/menuBotton"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:gravity="center_horizontal">

				<android.support.design.widget.FloatingActionButton
					android:id="@+id/bClear"
					android:onClick="@{() -> viewModel.requestClearRequestedByUser()}"
					android:src="@android:drawable/ic_menu_close_clear_cancel"
					style="@style/buttonsOnButtonBar"/>

				<android.support.design.widget.FloatingActionButton
					android:id="@+id/bMyLocation"
					android:onClick="@{() -> viewModel.setStartAsCurrentLocationRequestedByUser((LifecycleOwner) context)}"
					android:src="@android:drawable/ic_menu_mylocation"
					style="@style/buttonsOnButtonBar"/>
			</LinearLayout>

			<ProgressBar
				android:id="@+id/progressBar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:indeterminate="true"
				android:layout_alignParentBottom="true"
				android:layout_alignParentEnd="true"
				style="?android:attr/progressBarStyle"/>
		</RelativeLayout>

		<fragment
			android:id="@+id/navigationDrawer"
			android:name="pozzo.apps.travelweather.map.ui.SideMenuFragment"
			android:layout_width="@dimen/width_navigationDrawer"
			android:layout_height="match_parent"
			android:layout_gravity="start"
			tools:layout="@layout/fragment_side_menu"/>
	</android.support.v4.widget.DrawerLayout>
</layout>
